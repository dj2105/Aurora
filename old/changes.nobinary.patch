+      }
+    } catch (error) {
+      setStatus("Unable to load live data.", true);
+    }
+  }
+
+  function initHud() {
+    updateTimes();
+    setupInteractions();
+    refreshHud();
+    setInterval(updateTimes, 60000);
+    setInterval(() => refreshHud(), 5 * 60 * 1000);
+  }
+
+  if (document.readyState === "loading") {
