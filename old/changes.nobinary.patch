+  hourly.time.forEach((time, index) => {
+    const [date, hourPart] = time.split("T");
+    const hour = Number.parseInt(hourPart?.slice(0, 2), 10);
+    if (date === today && hour >= 20) {
+      values.push(hourly.cloud_cover[index]);
+    }
+    if (date === tomorrow && hour <= 2) {
+      values.push(hourly.cloud_cover[index]);
+    }
+  });
