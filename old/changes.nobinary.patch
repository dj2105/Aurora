+function scoreLabel(score) {
+  if (score <= 20) return "Low";
+  if (score <= 50) return "Moderate";
+  if (score <= 75) return "Good";
+  return "Excellent";
+}
+
+function scoreTier(score) {
+  if (score <= 20) return "low";
+  if (score <= 50) return "moderate";
+  if (score <= 75) return "good";
+  return "excellent";
+}
+
+export {
+  TIME_ZONE,
+  safeLocalStorageGet,
+  safeLocalStorageSet,
+  buildWeatherUrl,
+  buildGeocodingUrl,
+  cacheKey,
+  readCache,
+  writeCache,
+  fetchWithCache,
+  formatTimeWithZone,
+  formatDateInZone,
+  parseKpObserved,
